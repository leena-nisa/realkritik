@model MvcMovie.Models.ReviewIndex

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<head>
    <link rel="stylesheet" href="/css/reviewPage.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Andale+Mono&display=swap">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
</head>

<style>
    body {
        font-family: 'Andale Mono', monospace;
    }

    .reviews-list {
        border: 1px solid #ddd;
        padding: 10px;
        margin: 10px;
        background-color: #151f2e;
        width: 40%;
        margin-bottom: -120px;
    }

    .reviews-list li {
        margin-bottom: 10px;
    }

    .reviews-container {
        display: flex;
        flex-direction: column;
        gap: 1px;
        max-height: 600px; 
        overflow-y: auto; 
    }
    .reviews-container ul{
        padding-left: 0px;
    }
    
    .review-box {
        border: 1px solid #ddd;
        padding: 20px;
        background-color: #161617;
        margin-bottom: 20px;
    }

    .review-box {
        border: 1px solid #ddd;
        padding: 20px;
        background-color: #161617;
        margin-bottom: 20px;
    }
    .review-box:hover {
        background-color: #0867d2;
        /* Adjust the hover color as needed */
    }

    .review-header {
        display: flex;
        justify-content: space-between;
        margin-top: -20px;
    }

    .review-title {
        font-weight: bold;
    }

    .review-description {
        margin-top: 10px;
    }

    #logo:hover {
        transform: scale(1.1);
        transition: transform 0.3s ease-in-out;
    }

    #logo {
        transition: transform 0.3s ease-in-out;
    }

    .nav-container .link:hover {
        color: white;
    }

    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;

    }

    .test {
        background: #161617;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 500px;
        color: white;
        transform: scale(0.8);
        opacity: 0;
        transition: transform 0.2s ease, opacity 0.2s ease;
    }

    .modal-overlay.active .test {
        transform: scale(1);
        opacity: 1;
    }

    .close-button {
        position: absolute;
        /* Absolute position for top-right placement */
        top: 10px;
        /* Distance from the top */
        right: 10px;
        /* Distance from the right */
        background: transparent;
        /* No background */
        border: none;
        color: #ddd;
        font-size: 24px;
        cursor: pointer;
    }

    .close-button:hover {
        color: #fff;
        /* Change color on hover for better visibility */
    }
</style>

<body>
    <div class="page-content">
        <div class="top-banner">
            <!--within here we will have the Banner in the background, the profile picture and link/logo to homepage-->
            <div class="banner">
                <div class="background-img">
                    
                    <a asp-area="" asp-controller="Main" asp-action="Index" title="logo">
                        <img id="logo" src="/img/IMG_0213.png" alt="logo">
                    </a>
                    <div class="profile-contain">
                        <div class="profile-pic">
                            <img src="/img/ryanTestProfile.jpeg" alt="profile-pic">
                        </div>
                        <div class="profile-name">
                            <h1 class="name">Ryan</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="nav-links">
                <button onclick="openModal()" class="add-review">Add Review +</button>
                <div class="nav-container">
                    <a href="" class="link" id="overview">Overview</a>
                    <a href="" class="link" id="overview">Your Reviews</a>
                    <a href="" class="link" id="overview">Favorites</a>
                    <a href="" class="link" id="overview">Watched</a>
                </div>

            </div>

        </div>


        <div class="account-body">

            <div class="modal-overlay" id="modalOverlay" style="display:none">
                <div class="test">
                    <button class="close-button" onclick="closeModal()">âœ–</button>
                    <h1>Leave a Movie Review</h1>
                    <form asp-action="Create" method="post" id="myForm">

                        <div class="form-group">
                            <label for="title">Movie Title:</label>
                            <input type="text" id="title" name="title" placeholder="Enter movie title" required>
                        </div>

                        <div class="form-group">
                            <label for="status">Status:</label>
                            <select class="form-control" name="status" id="status" required>
                                <option value="Completed">Completed</option>
                                <option value="Watching">Watching</option>
                                <option value="Plan to watch">Plan to watch</option>
                            </select>
                        </div>


                        <div class="form-group">
                            <label for="rating">Rating (1 to 10):</label>
                            <input type="number" name="Score" id="Score" min="1" max="10"
                                placeholder="Enter your rating" type="number" required>
                        </div>

                        <div class="form-group">
                            <label for="notes">Notes/Description:</label>
                            <textarea name="ReviewDescription" id="ReviewDescription" rows="4"
                                placeholder="Write your review here..."></textarea>
                        </div>

                        <button type="submit" class="submit-btn">Submit Review</button>
                    </form>

                </div>
            </div>


            <div class="account-wrap">
                <div class="left-section"></div>
                <div class="right-section"></div>
            </div>

            <ul class="reviews-list">
                <li>
                    <h2>Reviews</h2>
                </li>
                <div class="reviews-container">
                    @if (Model.Reviews.Any(r => r.status == "Completed"))
                    {
                        <ul style="list-style-type: none">
                            @foreach (var review in Model.Reviews.Where(r => r.status == "Completed"))
                            {


                                <div class="review-box">
                                    <div class="review-header" style ="margin-top:-20px">
                                        <h2 style="color:whitesmoke" class="review-title">@review.Title</h2>
                                        <div style="color:whitesmoke;padding-top:23px; font-size: 16px" class="review-score">@review.Score</div>
                                    </div>
                                    <div style="color:#e3e3e3" class="review-description">
                                        @review.ReviewDescription
                                    </div>
                                </div>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No completed reviews found.</p>
                    }
                </div>

            </ul>
        </div>



        <div class="footer">

        </div>
    </div>
</body>




<script>
    function openModal() {
        const modalOverlay = document.getElementById("modalOverlay");
        modalOverlay.style.display = "flex";
        setTimeout(() => {
            modalOverlay.classList.add("active"); // Add active class after a slight delay
        }, 10);
    }

    function closeModal() {
        const modalOverlay = document.getElementById("modalOverlay");
        modalOverlay.classList.remove("active");
        setTimeout(() => {
            modalOverlay.style.display = "none";
        }, 200);
    }

    $(document).ready(function () {
        $("#submitButton").click(function () {
            var formData = $("#myForm").serialize();

            $.ajax({
                type: "POST",
                url: "/TestController/Create",
                data: formData,
                success: function (response) {

                },
                error: function (error) {

                    console.error(error);
                }
            });
        });
    });

