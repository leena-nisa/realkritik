@model MvcMovie.Models.ReviewIndex

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<head>
    <link rel="stylesheet" href="/css/reviewPage.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
</head>

<style>
    .reviews-list {
        border: 1px solid #ddd; /* Adjust border style and color as needed */
        padding: 10px; /* Adjust padding for spacing */
        margin: 10px; /* Adjust margin for positioning */
        background-color: #151f2e; /* Optional background color */
        width: 40%;
    }

    .reviews-list li {
        margin-bottom: 10px; /* Adjust the margin as needed */
    }

    .reviews-container {
        display: flex;
        flex-direction: column;
        gap: 15px; /* Adjust the gap as needed */
    }

    .review-box {
        border: 1px solid #ddd;
        padding: 20px;
        background-color: #151f2e;
        margin-bottom: 20px;
    }
    .review-box:hover {
        background-color: #0867d2; /* Adjust the hover color as needed */
    }

    .review-header {
    display: flex;
    justify-content: space-between;
    }

    .review-title {
    font-weight: bold;
    }

    .review-description {
    margin-top: 10px;
    }

  
</style>
<body>
    <div class="page-content">
        <div class="top-banner">
            <!--within here we will have the Banner in the background, the profile picture and link/logo to homepage-->
            <div class="banner">
                <div class="background-img">
                    <a href="MainPage.html" title="logo">
                        <img id="logo" src="/img/IMG_0213.png" alt="logo">
                    </a>
                    <div class="profile-contain">
                        <div class="profile-pic">
                            <img src="/img/ryanTestProfile.jpeg" alt="profile-pic">
                        </div>
                        <div class="profile-name">
                            <h1 class="name">Ryan</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="nav-links">
                <button class="add-review">Add Review +</button>
                <div class="nav-container">
                    <a href="" class="link" id="overview">Overview</a>
                    <a href="" class="link" id="overview">Your Reviews</a>
                    <a href="" class="link" id="overview">Favorites</a>
                    <a href="" class="link" id="overview">Watched</a>
                </div>
                
            </div>

        </div>

        <div class="account-body">
            <div class="review-form">
                <h2>Leave a Movie Review</h2>
                <form asp-action="Create" method="post" id = "myForm">

                    <div class="form-group">
                        <label for="genre">Genre:</label>
                        <select class="form-control" name="status" id ="status" required>
                            <option value="Completed">Completed</option>
                            <option value="Watching">Watching</option>
                            <option value="Plan to watch">Plan to watch</option>
                        </select>
                    </div>
                    
                    @* <div class="form-group">
                        <label for="title">Movie Title:</label>
                        <input type="text" id="title" name="title" placeholder="Enter movie title" required>
                    </div> *@
                    
                    <div class="form-group">
                        <label for="rating">Rating (1 to 10):</label>
                        <input type="number" name="Score" id ="Score" min="1" max="10" placeholder="Enter your rating" type ="number" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="notes">Notes/Description:</label>
                        <textarea name="ReviewDescription" id="ReviewDescription" rows="4" placeholder="Write your review here..."></textarea>
                    </div>
                    
                    <button type="submit" class="submit-btn">Submit Review</button>
                    <button class="close-review-form">Close</button>
                </form>
            </div>

            <div class="account-wrap">
                <div class="left-section"></div>
                <div class="right-section"></div>
            </div>
            <ul class="reviews-list">
                <li><h2>Title         Review Score and Description</h2></li>
                <div class="reviews-container">
                    @if (Model.Reviews.Any(r => r.status == "Completed"))
                    {
                        <ul style = "list-style-type: none">
                            @foreach (var review in Model.Reviews.Where(r => r.status == "Completed"))
                            {
                            

                                <div class="review-box">
                                    <div class="review-header">
                                        <div class="review-title">Review Title</div>
                                        <div class="review-score">@review.Score</div>
                                    </div>
                                    <div class="review-description">
                                        @review.ReviewDescription
                                    </div>
                                </div>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No completed reviews found.</p>
                    }
                </div>
            </ul>
        </div>
        

        <div class="footer">

        </div>
    </div>
</body>




<script>
    $(document).ready(function() {
        $("#submitButton").click(function() {
            var formData = $("#myForm").serialize();

            $.ajax({
                type: "POST",
                url: "/TestController/Create",
                data: formData,
                success: function(response) {
                    // Handle the response from the server
                    console.log(response);
                    // Update the DOM or trigger other actions as needed
                },
                error: function(error) {
                    // Handle errors
                    console.error(error);
                }
            });
        });
    });

     let reviewForm = document.querySelector(".review-form");
        console.log(reviewForm);

        let addReviewBtn = document.querySelector(".add-review");
        console.log(addReviewBtn);
        let closeReviewForm = document.querySelector(".close-review-form");

        addReviewBtn.addEventListener("click", ()=>{
                reviewForm.style.display = "block";
            })

        closeReviewForm.addEventListener("click", ()=>{
                reviewForm.style.display = "none";
            })
</script>






