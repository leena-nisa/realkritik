@{
    ViewData["Title"] = "Movie List";
    Layout = null;
}
<style>
    body {
        background-color: 000000;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    .container {
        border-radius: 20px;
        width: 50rem;
        height: 50%;
        display: flex;
        margin-bottom: 100px; 
        gap: 20px;
        color:white;
    }

    .left-container, .right-container{
        flex: 1;
        border-radius: 20px;
        background-color: 161617;
    }

    .left-container{
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: -4px 4px 15px rgba(250, 57, 89, 0.993);
    }

    .right-container{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
        padding: 20px;
        gap: 20px;
        box-shadow: -2px 4px 15px rgb(2, 192, 226);
    }

    #right-container-caption{
        margin-left: 10px;
        margin-right: 10px;
        margin-top: -40px;
    }

    .btn-container{
        display: flex;
        gap: 20px;
        margin-top: 20px;
    }

    #sign-up-btn, #log-in-btn{
        display: flex; justify-content: center; align-items: center;
        background-color: black;
        height: 40px;
        width: 170px;
        font-size: 16px;
        transition: 0.1s;
        border-radius: 5px;
        color: rgb(2, 192, 226);
        border: none;
        text-decoration: none;
    }

    #sign-up-btn:hover, #log-in-btn:hover{
        background-color: rgb(48, 88, 158);
        color: white;
        cursor:pointer;
        transition: 0.1s;
    }

    #username, #password{
        width: 95%;
        height: 42px;
        display: flex; justify-content: left; align-items: center;
        padding-left: 10px;
    }

    form{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        gap: 8px;
    }

    #login-logo{
        height: 100%;
        width: 100%;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration & Authentication</title>
    <link rel="stylesheet" href="LoginPage.css">
</head>
<body>
    <div class="container">
        <div class="left-container">
            <img src="/img/IMG_0213.png" alt="logo" id="login-logo">
        </div>
        <div class="right-container">
            <h1>Welcome to Kritik</h1>
            <p id="right-container-caption">Login or Signup to become a Kritik!</p>
            <form>
                <label for="username">Username</label>
                <input type="text" placeholder="Username" id="username" name="username" required>

                <label for="password">Password</label>
                <input type="password" placeholder="Password" id="password" name="password" data-= required>
                
                <div class="btn-container">
                    <button type="button" id="log-in-btn" onclick="validate()">Log In</button>
                    <button type="button" id="sign-up-btn">Sign Up</button>
                </div>
                <a class="nav-link text-dark" asp-area="" asp-controller="Test" asp-action="Index">Test</a>
            </form>
        </div>
    </div>
</body>
</html>

<script>
    function validate(){
        console.log(document.getElementById("password").value);
        if(document.getElementById("password").value == "ryan"){
            window.location.href = "/Main"
        }

    }
</script>