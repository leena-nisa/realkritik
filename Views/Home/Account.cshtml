@page
@{
    Layout = null; 
}
<!--This is going to be more so the layout than it is the actual page-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account</title>
    <link rel="stylesheet" href="~/Views/Home/AccountPage.cshtml.css">
</head>
<style>
    body{
    overflow-x: hidden;
    background-color: black;
    margin: 0px;
    display: block;
}
/*this is anything having to do witht the top part of accoutn page*/
.top-banner{
    background-color: rgb(225, 222, 222);
}
.banner{
    height: 200px;
}
.nav-links{
    background: white;
    position: relative;
    height: 50px;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
}
.nav-container{
    display: flex;
    justify-content: center;
    gap: 130px;
    margin-left: 70px;
}
.nav-container a{
    color: gray;
    text-decoration: none;
}
.background-img{
    background-image: url(RyanTestBackground.jpeg);
    position: relative;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: 50% 35%;
    height: 200px
}
.background-img img{
    width: 70px;
    margin-bottom: 30px;
    margin-left: 20px;
    background: rgba(204, 198, 198, .5)    
}
#logo{
    width: 80px;
    margin-top: 5px;
    margin-bottom: 30px;
    margin-left: 12px;
    background: rgba(204, 198, 198, .34);
    border-radius: 50px;
}
.profile-contain{
    display: flex;
    padding-left: 80px;
    margin-top: -21px;
}
.profile-name{
    width: 200px;
    height: 60px;
    padding-top: 50px;
    display: inline-block;
    color: aliceblue;
    
}
.profile-name h1{

    margin: 0px;
    width: 100px;
    
}
.profile-pic{
    width: 125px;
}
.profile-pic img{
    width: 100px;
}
/*Anythign having to deal with the body content of account page*/
.account-body{
    background-color: lightgray;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}
/*Having to deal with the footer of account page*/

.add-review{
    background-color: rgb(114, 175, 232);
    color: white;
    text-decoration: none;
    border: none;
    border-radius: 5px;
    height: 75%;
    width: 10%;
    transition: 0.1s;
}

.add-review:hover{
    background-color:  rgb(72, 113, 151);
    transition: 0.1s;
    cursor: pointer;
}

.review-form {
    background: #ffffff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 300px;
    display: none;
}

.review-form h2 {
    margin-top: 0;
    font-size: 1.5em;
    color: #333;
}

.form-group {
    margin-bottom: 15px;
}

.form-group label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
}

.form-group input, .form-group select, .form-group textarea {
    width: 100%;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

.form-group textarea {
    resize: vertical;
}

.submit-btn {
    width: 100%;
    padding: 10px;
    background-color: #28a745;
    color: #fff;
    border: none;
    border-radius: 4px;
    font-size: 1em;
    cursor: pointer;
}

.submit-btn:hover {
    background-color: #218838;
}

#title, #rating, #notes{
    width: 95%;
}

.close-review-form{
    transition: 0.1s;
    margin-top: 10px;
    border: none;
    background-color: rgb(224, 79, 79);
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 30px;
    width: 100px;
    border-radius: 5px;
}

.close-review-form:hover{
    transition: 0.1s;
    background-color: rgb(196, 22, 22);
    cursor: pointer;
}
</style>

<body>
    <div class="page-content">
        <div class="top-banner">
            <!--within here we will have the Banner in the background, the profile picture and link/logo to homepage-->
            <div class="banner">
                <div class="background-img">
                    <a href="MainPage.html" title="logo">
                        <img id="logo" src="IMG_0213.png" alt="logo">
                    </a>
                    <div class="profile-contain">
                        <div class="profile-pic">
                            <img src="ryanTestProfile.jpeg" alt="profile-pic">
                        </div>
                        <div class="profile-name">
                            <h1 class="name">Name</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="nav-links">
                <button class="add-review">Add Review +</button>
                <div class="nav-container">
                    <a href="" class="link" id="overview">Overview</a>
                    <a href="" class="link" id="overview">Your Reviews</a>
                    <a href="" class="link" id="overview">Favorites</a>
                    <a href="" class="link" id="overview">Watched</a>
                </div>
                
            </div>

        </div>

        <div class="account-body">
            <div class="review-form">
                <h2>Leave a Movie Review</h2>
                <form action="#" method="post">
                    <div class="form-group">
                        <label for="genre">Genre:</label>
                        <select id="genre" name="genre" required>
                            <option value="">Select Genre</option>
                            <option value="Action">Action</option>
                            <option value="Comedy">Comedy</option>
                            <option value="Drama">Drama</option>
                            <option value="Horror">Horror</option>
                            <option value="Romance">Romance</option>
                            <option value="Sci-Fi">Sci-Fi</option>
                            <option value="Thriller">Thriller</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="title">Movie Title:</label>
                        <input type="text" id="title" name="title" placeholder="Enter movie title" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="rating">Rating (1 to 5):</label>
                        <input type="number" id="rating" name="rating" min="1" max="5" placeholder="Enter your rating" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="notes">Notes/Description:</label>
                        <textarea id="notes" name="notes" rows="4" placeholder="Write your review here..."></textarea>
                    </div>
                    
                    <button type="submit" class="submit-btn">Submit Review</button>
                    <button class="close-review-form">Close</button>
                </form>
            </div>
            <div class="account-wrap">
                <div class="left-section"></div>
                <div class="right-section"></div>
            </div>
        </div>

        <div class="footer">

        </div>
    </div>
    <script src="js/AddReview.js"></script>
