@model MvcMovie.Models.ReviewIndex

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<head>
    <link rel="stylesheet" href="/css/Account.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Andale+Mono&display=swap">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="/js/Account.js"></script>
    <!-- referencing Ajax and Google fonts  -->
</head>

<body>
    <div class="page-content">
        <div class="top-banner">
            <!--within here we will have the Banner in the background, the profile picture and link/logo to homepage-->
            <div class="banner">
                <div class="background-img">
                    <a asp-area="" asp-controller="Main" asp-action="Index" title="logo">
                        <img id="logo" src="/img/IMG_0213.png" alt="logo">
                        <!-- This is where the logo banner lies -->
                    </a>
                    <div class="profile-contain">
                        <div class="profile-pic">
                            <img src="/img/ryanTestProfile.jpeg" alt="profile-pic">
                            <!-- Profile Picture -->
                        </div>
                        <div class="profile-name">
                            <h1 class="name">Ryan</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="nav-links">

                <!-- This is where the openModal() function is called when the button is clicked -->
                <button onclick="openModal()" class="add-review">Add Review +</button>
                <div class="nav-container">
                    <a href="" class="link" id="overview">Overview</a>
                    <a href="" class="link" id="overview">Your Reviews</a>
                    <a href="" class="link" id="overview">Favorites</a>
                    <a href="" class="link" id="overview">Watched</a>
                </div>

            </div>

        </div>


        <div class="account-body">

            <div class="modal-overlay" id="modalOverlay" style="display:none">
                <div class="test">

                    <!-- This is where the closeModal() is called when the X button is clicked -->
                    <button class="close-button" onclick="closeModal()">âœ–</button>
                    <h1>Leave a Movie Review</h1>
                    <form asp-action="Create" method="post" id="myForm">
                        <div class="form-group">
                            <label for="title">Movie Title:</label>
                            <input type="text" id="title" name="title" placeholder="Enter movie title" required>
                        </div>

                        <div class="form-group">
                            <label for="status">Status:</label>
                            <select class="form-control" name="status" id="status" required>
                                <option value="Completed">Completed</option>
                                <option value="Watching">Watching</option>
                                <option value="Plan to watch">Plan to watch</option>
                            </select>
                        </div>


                        <div class="form-group">
                            <label for="rating">Rating (1 to 10):</label>
                            <input type="number" name="Score" id="Score" min="1" max="10"
                                placeholder="Enter your rating" type="number" required>
                        </div>

                        <div class="form-group">
                            <label for="notes">Notes/Description:</label>
                            <textarea name="ReviewDescription" id="ReviewDescription" rows="4"
                                placeholder="Write your review here..."></textarea>
                        </div>

                        <button type="submit" class="submit-btn">Submit Review</button>
                    </form>

                </div>
            </div>


            <div class="account-wrap">
                <div class="left-section"></div>
                <div class="right-section"></div>
            </div>

            <ul class="reviews-list">
                <li>
                    <h2>Reviews</h2>
                </li>
                <div class="reviews-container">
                    @if (Model.Reviews.Any(r => r.status == "Completed"))
                    {
                        <ul style="list-style-type: none">
                            @foreach (var review in Model.Reviews.Where(r => r.status == "Completed"))
                            {


                                <div class="review-box">
                                    <div class="review-header">
                                        <h2 class="review-title">@review.Title</h2>
                                        <div class="review-score">@review.Score</div>
                                    </div>
                                    <div class="review-description">
                                        @review.ReviewDescription
                                    </div>
                                </div>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No completed reviews found.</p>
                    }
                </div>

            </ul>
        </div>



        <div class="footer">

        </div>
    </div>
</body>





